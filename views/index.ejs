<%include ./partials/head.ejs %>
<%include ./partials/navbar.ejs %>

<div id="exchange" class="container mt-5">
    <div class="row">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Amount">
                        </div>
                        <div class="input-group mb-3">
                            <select class="form-control" id="inputGroupSelect01" name="currencyFrom">
                                <% for (var i = 0; i < currency.length; i++) { %>
                                <option value="<%= currency[i] %>"><%= currency[i] %></option>
                                <% } %>
                            </select>
                            <div class="input-group-append">
                                <label class="input-group-text" for="inputGroupSelect01">From</label>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect02">To</label>
                            </div>
                            <select class="form-control" id="inputGroupSelect02" name="currencyTo">
                                <% for (var i = 0; i < currency.length; i++) { %>
                                <option value="<%= currency[i] %>"><%= currency[i] %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <input id="result" type="text" class="form-control" placeholder="Exchanged Value">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Exchange</button>
                        </div>
                    </form>
                    <p id="warning"></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/appScript.js"></script>

<%include ./partials/footer.ejs %>